#!/usr/bin/env ruby
# frozen_string_literal: true

$DEBUG = true
$VERBOSE = true

require 'bundler/setup'

require 'sidekiq_search'

Pathname.glob('spec/support/jobs/*.rb').each { require(_1.expand_path) }

require_relative '../spec/support/util'

def _flush_all
  SidekiqSearch::Util.flush_all
end

require 'irb'
IRB.start(__FILE__)
